{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "glifo.cat",
  "description": "Documentation for glifocat open source projects",
  "colors": {
    "primary": "#7aa2f7",
    "light": "#7dcfff",
    "dark": "#7aa2f7"
  },
